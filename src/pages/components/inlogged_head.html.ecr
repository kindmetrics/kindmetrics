<div class="max-w-6xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="w-full flex justify-between items-center mb-4">
    <div class="flex justify-between items-center">
      <img src="/apple-icon-76x76.png" class="h-6 w-6 mr-2" />
      <% link "Kindmetrics", to: Home::Index, class: "text-2xl font-sans text-black hover:underline" %>
    </div>
    <% unless current_user.nil? %>
    <div class="text-sm leading-none rounded no-underline text-gray-700 hover:text-gray-900 bg-white">
      <div class="relative" data-controller="dropdown">
        <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" class="inline-block select-none rounded-md p-3 text-md bg-white">
          <span class="appearance-none flex items-center inline-block text-xl">
            <%=current_user.not_nil!.name || "No name" %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="h-4 w-4 ml-2 text-gray-600"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
          </span>
        </div>
        <div data-target="dropdown.menu" class="absolute right-0 mt-2 w-full z-20 hidden">
          <div class="bg-white shadow-lg rounded overflow-hidden">
            <% link "Dashboard", to: Home::Index, class: "no-underline block px-5 py-4 text-gray-900 bg-white hover:bg-gray-300 whitespace-no-wrap" %>
            <% link "Settings", to: Users::Edit, class: "no-underline block px-5 py-4 text-gray-900 bg-white hover:bg-gray-300 whitespace-no-wrap" %>
            <% link "Sign out", to: SignIns::Delete, class: "no-underline block px-5 py-4 text-gray-900 bg-white hover:bg-gray-300 whitespace-no-wrap" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
